{
  "manifest_version": 2,
  "name": "Speak To Do",
  "description": "Speak to do -> Enables you to do something based on a specific voice command",
  "version": "1",
  "author": "Mustafa Fathi",
  "short_name": "spyca",
  "browser_action": {
    "default_title": "Speak To Do",
    "default_popup": "popup.html"
  },
  "icons": {
  },
  "minimum_chrome_version": "25",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["<all_urls>"],
    "all_frames": true
  }]
}
